{
  "manifest_version": 3,
  "name": "Anti-Spoil Extension",
  "version": "1.0.0",
  "description": "Blur YouTube video thumbnails and titles to prevent spoilers",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["dist/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Anti-Spoil Extension"
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon16.svg",
    "128": "icons/icon16.svg"
  }
}
