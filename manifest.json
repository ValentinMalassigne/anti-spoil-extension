{
  "manifest_version": 3,
  "name": "Anti-Spoil Extension",
  "version": "1.0.0",
  "description": "Floute automatiquement les miniatures et titres des chaînes YouTube que vous voulez éviter pour prévenir les spoils.",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "content-scripts/youtube-content.js"
      ],
      "css": [
        "content-scripts/youtube-styles.css"
      ],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Anti-Spoil Extension",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "content-scripts/*.css"
      ],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
