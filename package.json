{
  "name": "anti-spoil-extension",
  "version": "1.0.0",
  "description": "Extension Chrome qui protège contre les spoils YouTube en floutant les contenus des chaînes sélectionnées",
  "author": "ValentinMalassigne",
  "license": "MIT",
  "homepage": "https://github.com/ValentinMalassigne/anti-spoil-extension",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ValentinMalassigne/anti-spoil-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "youtube",
    "spoiler",
    "blur",
    "content-blocker",
    "typescript"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "npm run build:watch",
    "build": "npm run clean && npm run compile && npm run copy-assets",
    "build:watch": "npm run clean && concurrently \"npm run compile:watch\" \"npm run copy-assets:watch\"",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "clean": "rimraf dist",
    "copy-assets": "npm run copy:manifest && npm run copy:html && npm run copy:css && npm run copy:icons",
    "copy-assets:watch": "npm run copy-assets && npm run watch:assets",
    "copy:manifest": "copyfiles manifest.json dist/",
    "copy:html": "copyfiles \"src/**/*.html\" dist/ --up 1",
    "copy:css": "copyfiles \"src/**/*.css\" dist/ --up 1",
    "copy:icons": "copyfiles \"assets/**/*\" dist/ --up 1",
    "watch:assets": "chokidar \"manifest.json\" \"src/**/*.{html,css}\" \"assets/**/*\" -c \"npm run copy-assets\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,html,css}\"",
    "type-check": "tsc --noEmit",
    "package": "npm run build && npm run zip",
    "zip": "cd dist && zip -r ../anti-spoil-extension.zip .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docs": "typedoc src --out docs/api",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,html,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "Chrome >= 88"
  ],
  "manifest": {
    "version": "3",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ]
  }
}
